# Environnement d'exécution
APP_ENV=dev
APP_DEBUG=true
APP_SECRET=votre_clé_secrète_ici_changez_moi_en_production

# Base de données (MySQL)
DATABASE_URL="mysql://root:alpho224@127.0.0.1:3306/police-routiere_BD"

# Mailer (SMTP)
MAILER_DSN=smtp://localhost:1025

# Redis (optionnel)
REDIS_URL=redis://localhost:6379

# Sentry (optionnel - Exception tracking)
SENTRY_DSN=

# Date/heure
TIMEZONE=Africa/Conakry

# Logs
LOG_CHANNEL=monolog
LOG_LEVEL=debug

# Sécurité
CORS_ALLOW_ORIGIN=^https?://localhost(:[0-9]+)?$
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax

# JWT (pour API REST optionnelle)
JWT_SECRET=votre_clé_jwt_secrète
JWT_PUBLIC_KEY=%kernel.project_dir%/config/jwt/public.pem
JWT_PRIVATE_KEY=%kernel.project_dir%/config/jwt/private.pem

# Email pour notifications
ADMIN_EMAIL=admin@police-routiere.gn
SUPPORT_EMAIL=support@police-routiere.gn
FROM_EMAIL=noreply@police-routiere.gn

# Configuration métier
SYSTEM_NAME=Police Routière
SYSTEM_VERSION=1.0.0
COUNTRY=Guinea
CURRENCY=GNF

# Mode maintenance
MAINTENANCE_MODE=false

# Features flags
ENABLE_API=true
ENABLE_PDF_EXPORT=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_AUDIT_LOG=true

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Performance
CACHE_ENABLED=false
CACHE_ADAPTER=redis://localhost:6379
CACHE_TTL=3600
