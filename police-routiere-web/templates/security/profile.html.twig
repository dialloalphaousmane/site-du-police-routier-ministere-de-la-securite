{% extends 'base.html.twig' %}

{% block title %}Profil Utilisateur - Police Routière{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-person-circle"></i> Mon Profil
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted">Email</h6>
                            <p class="lead">{{ user.email }}</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Nom Complet</h6>
                            <p class="lead">{{ user.prenom }} {{ user.nom }}</p>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted">Rôle</h6>
                            <p class="lead">
                                <span class="badge bg-info">{{ user.role.libelle }}</span>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Statut</h6>
                            <p class="lead">
                                {% if user.isActive %}
                                    <span class="badge bg-success">Actif</span>
                                {% else %}
                                    <span class="badge bg-danger">Inactif</span>
                                {% endif %}
                            </p>
                        </div>
                    </div>

                    {% if user.region %}
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <h6 class="text-muted">Région</h6>
                                <p class="lead">{{ user.region.libelle }}</p>
                            </div>
                            {% if user.brigade %}
                                <div class="col-md-6">
                                    <h6 class="text-muted">Brigade</h6>
                                    <p class="lead">{{ user.brigade.libelle }}</p>
                                </div>
                            {% endif %}
                        </div>
                    {% endif %}

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6 class="text-muted">Date d'inscription</h6>
                            <p class="lead">{{ user.createdAt.format('d/m/Y H:i') }}</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Dernière mise à jour</h6>
                            <p class="lead">{{ user.updatedAt.format('d/m/Y H:i') }}</p>
                        </div>
                    </div>

                    <hr>

                    <div class="d-grid gap-2 d-md-flex gap-2">
                        <a href="{{ path('app_change_password') }}" class="btn btn-warning">
                            <i class="bi bi-lock"></i> Changer le mot de passe
                        </a>
                        <a href="{{ path('app_dashboard') }}" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Retour au tableau de bord
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
