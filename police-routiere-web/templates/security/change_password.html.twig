{% extends 'base.html.twig' %}

{% block title %}Changer le mot de passe - Police Routière{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning">
                    <h4 class="mb-0">
                        <i class="bi bi-lock"></i> Changer le mot de passe
                    </h4>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                    <div class="mb-3">
                        {{ form_row(form.oldPassword, {
                            'attr': {'class': 'form-control', 'placeholder': 'Ancien mot de passe'}
                        }) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.newPassword.first, {
                            'attr': {'class': 'form-control', 'placeholder': 'Nouveau mot de passe'}
                        }) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.newPassword.second, {
                            'attr': {'class': 'form-control', 'placeholder': 'Confirmer le nouveau mot de passe'}
                        }) }}
                    </div>

                    <small class="text-muted d-block mb-3">
                        <i class="bi bi-info-circle"></i> Le mot de passe doit contenir au moins 8 caractères, une majuscule, une minuscule, un chiffre et un caractère spécial
                    </small>

                    <div class="d-grid gap-2 d-md-flex gap-2">
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-check-circle"></i> Mettre à jour
                        </button>
                        <a href="{{ path('app_profile') }}" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Annuler
                        </a>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
