{% extends 'base.html.twig' %}

{% block title %}Police Routière Guinée - Accueil{% endblock %}

{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
<link href="https://127.0.0.1:8000/assets/css/home.css" rel="stylesheet">
{% endblock %}

{% block body %}
<!-- Navigation -->
<nav class="navbar-custom" id="mainNav">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <a href="#" class="navbar-brand-custom">
                <i class="bi bi-shield-check me-2"></i>
                Police Routière Guinée
            </a>
            <div class="d-flex align-items-center">
                {% if app.user %}
                    <a href="{{ path('app_dashboard') }}" class="nav-link-custom">
                        <i class="bi bi-speedometer2 me-1"></i>
                        Tableau de Bord
                    </a>
                    <a href="{{ path('app_logout') }}" class="nav-link-custom">
                        <i class="bi bi-box-arrow-right me-1"></i>
                        Déconnexion
                    </a>
                {% else %}
                    <a href="{{ path('app_login') }}" class="nav-link-custom">
                        <i class="bi bi-box-arrow-in-right me-1"></i>
                        Connexion
                    </a>
                    <a href="{{ path('app_register') }}" class="nav-link-custom">
                        <i class="bi bi-person-plus me-1"></i>
                        Créer un Compte
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
</nav>

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center min-vh-100">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="hero-title">
                        Police Routière<br>
                        <span style="color: var(--secondary-color);">Guinée</span>
                    </h1>
                    <p class="hero-subtitle">Sécurité, Discipline, Efficacité</p>
                    <p class="hero-description">
                        Plateforme numérique de gestion pour la sécurité routière en République de Guinée. 
                        Modernisation des services pour une meilleure protection des usagers de la route.
                    </p>
                    <div class="hero-buttons">
                        {% if app.user %}
                            <a href="{{ path('app_dashboard') }}" class="btn-hero btn-primary-hero">
                                <i class="bi bi-speedometer2 me-2"></i>
                                Tableau de Bord
                            </a>
                        {% else %}
                            <a href="{{ path('app_login') }}" class="btn-hero btn-primary-hero">
                                <i class="bi bi-box-arrow-in-right me-2"></i>
                                Se Connecter
                            </a>
                            <a href="{{ path('app_register') }}" class="btn-hero btn-secondary-hero">
                                <i class="bi bi-person-plus me-2"></i>
                                Créer un Compte
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image text-center">
                    <i class="bi bi-shield-fill" style="font-size: 15rem; color: rgba(255,255,255,0.1);"></i>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-4 fw-bold mb-3">Nos Services</h2>
            <p class="lead text-muted">Une solution complète pour la gestion routière</p>
        </div>
        
        <div class="row g-4">
            <div class="col-lg-4 fade-in" style="animation-delay: 0.1s;">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-clipboard-check"></i>
                    </div>
                    <h3 class="feature-title">Contrôles Routiers</h3>
                    <p class="feature-description">
                        Système numérique de gestion des contrôles sur l'ensemble du réseau routier guinéen. 
                        Suivi en temps réel des interventions, géolocalisation des postes de contrôle 
                        et documentation complète avec photos et signatures numériques.
                    </p>
                </div>
            </div>
            
            <div class="col-lg-4 fade-in" style="animation-delay: 0.2s;">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-exclamation-triangle"></i>
                    </div>
                    <h3 class="feature-title">Gestion des Infractions</h3>
                    <p class="feature-description">
                        Catalogue complet des infractions au code de la route guinéen. 
                        Classification automatique, calcul des pénalités selon la réglementation 
                        nationale et génération automatique des procès-verbaux numériques.
                    </p>
                </div>
            </div>
            
            <div class="col-lg-4 fade-in" style="animation-delay: 0.3s;">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-cash-stack"></i>
                    </div>
                    <h3 class="feature-title">Gestion des Amendes</h3>
                    <p class="feature-description">
                        Suivi complet du processus de recouvrement des amendes. 
                        Paiement en ligne via mobile money (Orange Money, MTN), 
                        échéanciers automatiques et statistiques financières en temps réel.
                    </p>
                </div>
            </div>
            
            <div class="col-lg-4 fade-in" style="animation-delay: 0.4s;">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-people"></i>
                    </div>
                    <h3 class="feature-title">Gestion du Personnel</h3>
                    <p class="feature-description">
                        Administration complète des effectifs de la Police Routière. 
                        Gestion des carrières, planning des services, affectations 
                        par région et suivi des performances individuelles.
                    </p>
                </div>
            </div>
            
            <div class="col-lg-4 fade-in" style="animation-delay: 0.5s;">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-graph-up"></i>
                    </div>
                    <h3 class="feature-title">Tableaux de Bord</h3>
                    <p class="feature-description">
                        Statistiques détaillées et rapports personnalisés 
                        pour la direction générale, les directions régionales 
                        et les chefs de brigade. Indicateurs de performance 
                        et aide à la décision.
                    </p>
                </div>
            </div>
            
            <div class="col-lg-4 fade-in" style="animation-delay: 0.6s;">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-shield-check"></i>
                    </div>
                    <h3 class="feature-title">Sécurité & Conformité</h3>
                    <p class="feature-description">
                        Protection des données personnelles conformément à la réglementation guinéenne. 
                        Traçabilité complète des actions, sauvegarde sécurisée 
                        et audits de sécurité réguliers.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Statistics Section -->
<section class="stats-section">
    <div class="container">
        <div class="row">
            <div class="col-md-3 fade-in">
                <div class="stat-card">
                    <div class="stat-number" data-target="50000">0</div>
                    <div class="stat-label">Contrôles par an</div>
                </div>
            </div>
            <div class="col-md-3 fade-in">
                <div class="stat-card">
                    <div class="stat-number" data-target="15000">0</div>
                    <div class="stat-label">Infractions traitées</div>
                </div>
            </div>
            <div class="col-md-3 fade-in">
                <div class="stat-card">
                    <div class="stat-number" data-target="1000">0</div>
                    <div class="stat-label">Agents actifs</div>
                </div>
            </div>
            <div class="col-md-3 fade-in">
                <div class="stat-card">
                    <div class="stat-number" data-target="95">0</div>
                    <div class="stat-label">% de satisfaction</div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h2 class="cta-title">Rejoignez la Modernisation</h2>
                <p class="cta-description">
                    Contribuez à l'amélioration de la sécurité routière en Guinée à travers 
                    notre plateforme numérique moderne et efficace.
                </p>
                {% if not app.user %}
                    <div class="d-flex justify-content-center gap-3">
                        <a href="{{ path('app_register') }}" class="btn-hero btn-primary-hero" style="background: white; color: var(--secondary-color);">
                            <i class="bi bi-person-plus me-2"></i>
                            Créer un Compte
                        </a>
                        <a href="{{ path('app_login') }}" class="btn-hero btn-secondary-hero" style="border-color: white; color: white;">
                            <i class="bi bi-box-arrow-in-right me-2"></i>
                            Se Connecter
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</section>

<!-- Footer -->
<footer class="footer">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 mb-4">
                <div class="footer-logo">
                    <i class="bi bi-shield-check me-2"></i>
                    Police Routière Guinée
                </div>
                <p class="text-muted">
                    Service national dédié à la sécurité routière et à la protection des usagers 
                    sur l'ensemble du territoire guinéen.
                </p>
                <div class="social-links">
                    <a href="#" aria-label="Facebook">
                        <i class="bi bi-facebook"></i>
                    </a>
                    <a href="#" aria-label="Twitter">
                        <i class="bi bi-twitter"></i>
                    </a>
                    <a href="#" aria-label="LinkedIn">
                        <i class="bi bi-linkedin"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-4 mb-4">
                <h5 class="text-white mb-3">Liens Rapides</h5>
                <ul class="footer-links">
                    <li><a href="{{ path('app_home') }}">Accueil</a></li>
                    <li><a href="{{ path('app_login') }}">Connexion</a></li>
                    <li><a href="{{ path('app_register') }}">Inscription</a></li>
                    <li><a href="#">À Propos</a></li>
                    <li><a href="#">Contact</a></li>
                </ul>
            </div>
            <div class="col-lg-4 mb-4">
                <h5 class="text-white mb-3">Contact</h5>
                <ul class="footer-links">
                    <li><i class="bi bi-geo-alt me-2"></i> Conakry, Guinée</li>
                    <li><i class="bi bi-telephone me-2"></i> +224 XXX XX XX XX</li>
                    <li><i class="bi bi-envelope me-2"></i> info@police-routiere.gn</li>
                    <li><i class="bi bi-clock me-2"></i> 24h/24, 7j/7</li>
                </ul>
            </div>
        </div>
        <hr class="my-4" style="border-color: rgba(255,255,255,0.1);">
        <div class="text-center">
            <p class="mb-0">&copy; 2026 Police Routière Guinée. Tous droits réservés.</p>
        </div>
    </div>
</footer>
{% endblock %}

{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://127.0.0.1:8000/assets/js/home.js"></script>
{% endblock %}
