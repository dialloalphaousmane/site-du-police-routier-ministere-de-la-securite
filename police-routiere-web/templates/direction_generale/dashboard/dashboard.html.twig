{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
// Données des graphiques depuis le contrôleur
const controlsEvolutionData = {{ controlsEvolution|json_encode|raw }};
const controlsByRegionData = {{ controlsByRegion|json_encode|raw }};
const infractionsByTypeData = {{ infractionsByType|json_encode|raw }};
const monthlyRevenueData = {{ monthlyRevenue|json_encode|raw }};

// Graphique d'évolution des contrôles
const ctxEvolution = document.getElementById('controlsEvolutionChart').getContext('2d');
const controlsEvolutionChart = new Chart(ctxEvolution, {
    type: 'line',
    data: {
        labels: controlsEvolutionData.labels,
        datasets: [{
            label: 'Nombre de contrôles',
            data: controlsEvolutionData.data,
            borderColor: 'rgb(75, 192, 192)',
            backgroundColor: 'rgba(75, 192, 192, 0.2)',
            tension: 0.1
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
            legend: {
                position: 'top',
            },
            title: {
                display: true,
                text: 'Évolution des contrôles'
            }
        },
        scales: {
            y: {
                beginAtZero: true
            }
        }
    }
});

// Graphique circulaire des régions
const ctxRegions = document.getElementById('regionsChart').getContext('2d');
const regionsChart = new Chart(ctxRegions, {
    type: 'pie',
    data: {
        labels: controlsByRegionData.labels,
        datasets: [{
            label: 'Contrôles par région',
            data: controlsByRegionData.data,
            backgroundColor: [
                '#FF6384',
                '#36A2EB',
                '#FFCE56',
                '#4BC0C0',
                '#9966FF',
                '#FF9F40',
                '#FF6384',
                '#C9CBCF'
            ]
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
            legend: {
                position: 'right',
            },
            title: {
                display: true,
                text: 'Répartition par région'
            }
        }
    }
});

// Graphique des types d'infractions
const ctxInfractions = document.getElementById('infractionsChart').getContext('2d');
const infractionsChart = new Chart(ctxInfractions, {
    type: 'bar',
    data: {
        labels: infractionsByTypeData.labels,
        datasets: [{
            label: 'Nombre d\'infractions',
            data: infractionsByTypeData.data,
            backgroundColor: 'rgba(255, 99, 132, 0.2)',
            borderColor: 'rgba(255, 99, 132, 1)',
            borderWidth: 1
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
            legend: {
                display: false
            },
            title: {
                display: true,
                text: 'Types d\'infractions'
            }
        },
        scales: {
            y: {
                beginAtZero: true
            }
        }
    }
});

// Graphique des recettes mensuelles
const ctxRevenue = document.getElementById('revenueChart').getContext('2d');
const revenueChart = new Chart(ctxRevenue, {
    type: 'line',
    data: {
        labels: monthlyRevenueData.labels,
        datasets: [{
            label: 'Recettes (GNF)',
            data: monthlyRevenueData.data,
            borderColor: 'rgb(54, 162, 235)',
            backgroundColor: 'rgba(54, 162, 235, 0.2)',
            tension: 0.1
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
            legend: {
                position: 'top',
            },
            title: {
                display: true,
                text: 'Recettes mensuelles'
            }
        },
        scales: {
            y: {
                beginAtZero: true,
                ticks: {
                    callback: function(value) {
                        return value.toLocaleString() + ' GNF';
                    }
                }
            }
        }
    }
});

// Fonction pour mettre à jour le graphique d'évolution
function updateChart(period) {
    fetch(`/api/stats/controls-evolution?period=${period}`)
        .then(response => response.json())
        .then(data => {
            controlsEvolutionChart.data.labels = data.labels;
            controlsEvolutionChart.data.datasets[0].data = data.data;
            controlsEvolutionChart.update();
        })
        .catch(error => console.error('Error:', error));
}

// Actualisation automatique toutes les 5 minutes
setInterval(() => {
    location.reload();
}, 300000);
</script>
{% endblock %}
