{% extends 'base.html.twig' %}

{% block title %}Gestion des Infractions - Direction Générale{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1><i class="bi bi-exclamation-triangle me-2"></i>Gestion des Infractions</h1>
        </div>
        <div class="col-md-4">
            <form method="GET" class="d-flex gap-2">
                <select name="region" class="form-select form-select-sm">
                    <option value="">-- Toutes les régions --</option>
                    {% for region in regions %}
                        <option value="{{ region.id }}" {% if app.request.query.get('region') == region.id %}selected{% endif %}>
                            {{ region.nom }}
                        </option>
                    {% endfor %}
                </select>
                <button type="submit" class="btn btn-sm btn-primary">Filtrer</button>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Code</th>
                        <th>Description</th>
                        <th>Date</th>
                        <th>Région</th>
                        <th>Montant</th>
                        <th>Contrôle</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% if infractions|length > 0 %}
                        {% for infraction in infractions %}
                            <tr>
                                <td>
                                    <span class="badge bg-warning">{{ infraction.code }}</span>
                                </td>
                                <td>{{ infraction.description }}</td>
                                <td>
                                    <small>{{ infraction.infractionDate|date('d/m/Y') }}</small>
                                </td>
                                <td>
                                    <small>
                                        {% if infraction.controle and infraction.controle.brigade %}
                                            <span class="badge bg-info">{{ infraction.controle.brigade.region.nom }}</span>
                                        {% endif %}
                                    </small>
                                </td>
                                <td>
                                    <strong>{{ infraction.montantAmende|number_format(0, ',', ' ') }} GNF</strong>
                                </td>
                                <td>
                                    {% if infraction.controle %}
                                        <a href="{{ path('app_controle_show', {id: infraction.controle.id}) }}" class="btn btn-sm btn-link">
                                            #{{ infraction.controle.id }}
                                        </a>
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                                <td class="text-end">
                                    <a href="{{ path('app_infraction_show', {id: infraction.id}) }}" class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center py-4 text-muted">
                                Aucune infraction trouvée
                            </td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Pagination -->
    {% if pagination.total_pages > 1 %}
        <nav aria-label="Pagination" class="mt-3">
            <ul class="pagination justify-content-center">
                {% if pagination.current_page > 1 %}
                    <li class="page-item">
                        <a class="page-link" href="?page={{ pagination.current_page - 1 }}">Précédent</a>
                    </li>
                {% endif %}

                {% for i in 1..pagination.total_pages %}
                    <li class="page-item {% if i == pagination.current_page %}active{% endif %}">
                        <a class="page-link" href="?page={{ i }}">{{ i }}</a>
                    </li>
                {% endfor %}

                {% if pagination.current_page < pagination.total_pages %}
                    <li class="page-item">
                        <a class="page-link" href="?page={{ pagination.current_page + 1 }}">Suivant</a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    {% endif %}
</div>
{% endblock %}
