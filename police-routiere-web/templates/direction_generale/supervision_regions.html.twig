{% extends 'base.html.twig' %}

{% block title %}Supervision des Régions - Direction Générale{% endblock %}

{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<style>
.border-left-primary { border-left: 0.25rem solid #4e73df !important; }
.border-left-success { border-left: 0.25rem solid #1cc88a !important; }
.border-left-info { border-left: 0.25rem solid #36b9cc !important; }
.border-left-warning { border-left: 0.25rem solid #f6c23e !important; }
.text-xs { font-size: 0.7rem; }
.font-weight-bold { font-weight: 700 !important; }
.text-gray-800 { color: #5a5c69 !important; }
.text-gray-300 { color: #dddfeb !important; }
.text-gray-500 { color: #858796 !important; }
.sidebar {
    background-color: #f8f9fc;
    min-height: calc(100vh - 56px);
}
main {
    padding-top: 56px;
}
</style>
{% endblock %}

{% block body %}
<!-- Navigation -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">
            <i class="bi bi-shield-check me-2"></i>
            Police Routière Guinée - Direction Générale
        </a>
        
        <div class="navbar-nav ms-auto">
            <div class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                    <i class="bi bi-person-circle me-1"></i>
                    {{ app.user.email }}
                </a>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i>Profil</a></li>
                    <li><a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i>Paramètres</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="{{ path('app_logout') }}"><i class="bi bi-box-arrow-right me-2"></i>Déconnexion</a></li>
                </ul>
            </div>
        </div>
    </div>
</nav>

<!-- Main Content -->
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_direction_generale_dashboard') }}">
                            <i class="bi bi-speedometer2 me-2"></i>Vue d'ensemble
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_direction_generale_statistiques') }}">
                            <i class="bi bi-graph-up me-2"></i>Statistiques nationales
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('app_direction_generale_supervision') }}">
                            <i class="bi bi-geo-alt me-2"></i>Supervision régions
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_direction_generale_rapports') }}">
                            <i class="bi bi-file-text me-2"></i>Rapports consolidés
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_direction_generale_performance') }}">
                            <i class="bi bi-trophy me-2"></i>Performance
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_direction_generale_planification') }}">
                            <i class="bi bi-calendar3 me-2"></i>Planification
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content Area -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Supervision des Directions Régionales</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group me-2">
                        <button type="button" class="btn btn-sm btn-outline-primary" onclick="refreshSupervision()">
                            <i class="bi bi-arrow-clockwise me-1"></i>Actualiser
                        </button>
                        <button type="button" class="btn btn-sm btn-outline-secondary">
                            <i class="bi bi-download me-1"></i>Exporter
                        </button>
                    </div>
                    <button type="button" class="btn btn-sm btn-primary" onclick="showAddRegionModal()">
                        <i class="bi bi-plus-circle me-1"></i>Ajouter une Région
                    </button>
                </div>
            </div>

            <!-- Messages flash -->
            {% for type, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            <!-- Statistiques de supervision -->
            <div class="row mb-4">
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        Total Régions
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">{{ regions|length }}</div>
                                    <div class="text-xs text-gray-500">Directions régionales</div>
                                </div>
                                <div class="col-auto">
                                    <i class="bi bi-geo-alt fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                        Régions Actives
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">{{ regions|filter(r => r.status == 'active')|length }}</div>
                                    <div class="text-xs text-gray-500">En fonctionnement</div>
                                </div>
                                <div class="col-auto">
                                    <i class="bi bi-check-circle fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-info shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                        Agents Total
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">{{ regions|reduce((sum, r) => sum + r.active_agents, 0) }}</div>
                                    <div class="text-xs text-gray-500">Personnel actif</div>
                                </div>
                                <div class="col-auto">
                                    <i class="bi bi-people fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-warning shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                        Performance Moyenne
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">{{ regions|length > 0 ? (regions|reduce((sum, r) => sum + r.performance_rate, 0) / regions|length)|round(0) : 0 }}%</div>
                                    <div class="text-xs text-gray-500">Taux global</div>
                                </div>
                                <div class="col-auto">
                                    <i class="bi bi-graph-up fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tableau de supervision -->
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Détail des Directions Régionales</h6>
                    <div class="dropdown">
                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <i class="bi bi-funnel me-1"></i>Filtrer
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Toutes les régions</a></li>
                            <li><a class="dropdown-item" href="#">Régions actives</a></li>
                            <li><a class="dropdown-item" href="#">Régions inactives</a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Région</th>
                                    <th>Code</th>
                                    <th>Directeur</th>
                                    <th>Contact</th>
                                    <th>Agents</th>
                                    <th>Contrôles/Mois</th>
                                    <th>Recettes (GNF)</th>
                                    <th>Performance</th>
                                    <th>Statut</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for region in regions %}
                                <tr>
                                    <td>
                                        <strong>{{ region.name }}</strong>
                                        {% if region.last_activity %}
                                            <br><small class="text-muted">Dernière activité: {{ region.last_activity|date('d/m/Y') }}</small>
                                        {% endif %}
                                    </td>
                                    <td><span class="badge bg-secondary">{{ region.id }}</span></td>
                                    <td>{{ region.director }}</td>
                                    <td>
                                        <span class="badge bg-info">{{ region.agents_count }}</span>
                                        {% if region.agents_count > 0 %}
                                            <br><small class="text-muted">{{ region.active_agents }} actifs</small>
                                        {% endif %}
                                    </td>
                                    <td>{{ region.controls_month|default(0) }}</td>
                                    <td>{{ region.revenue_month|default(0)|number_format(0, '.', ' ') }}</td>
                                    <td>
                                        <div class="progress" style="height: 20px;">
                                            <div class="progress-bar {{ region.performance_rate >= 80 ? 'bg-success' : (region.performance_rate >= 60 ? 'bg-warning' : 'bg-danger') }}" 
                                                 role="progressbar" 
                                                 style="width: {{ region.performance_rate|default(0) }}%">
                                                {{ region.performance_rate|default(0) }}%
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        {% if region.status == 'active' %}
                                            <span class="badge bg-success">Actif</span>
                                        {% else %}
                                            <span class="badge bg-danger">Inactif</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-sm btn-outline-primary" onclick="viewRegion({{ region.id }})">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-secondary" onclick="editRegion({{ region.id }})">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            {% if region.status == 'active' %}
                                                <button type="button" class="btn btn-sm btn-outline-warning" onclick="toggleRegion({{ region.id }}, 'inactive')">
                                                    <i class="bi bi-pause"></i>
                                                </button>
                                            {% else %}
                                                <button type="button" class="btn btn-sm btn-outline-success" onclick="toggleRegion({{ region.id }}, 'active')">
                                                    <i class="bi bi-play"></i>
                                                </button>
                                            {% endif %}
                                            <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteRegion({{ region.id }})">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Graphique de performance -->
            <div class="row">
                <div class="col-xl-12">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Performance par Région</h6>
                        </div>
                        <div class="card-body">
                            <div class="chart-area">
                                <canvas id="performanceChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<!-- Modal Ajouter/Modifier Région -->
<div class="modal fade" id="regionModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="regionModalTitle">Ajouter une Région</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="regionForm">
                    <div class="mb-3">
                        <label for="name" class="form-label">Nom de la région</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="code" class="form-label">Code</label>
                        <input type="text" class="form-control" id="code" name="code" required>
                    </div>
                    <div class="mb-3">
                        <label for="director" class="form-label">Directeur</label>
                        <input type="text" class="form-control" id="director" name="director" required>
                    </div>
                    <div class="mb-3">
                        <label for="status" class="form-label">Statut</label>
                        <select class="form-control" id="status" name="status">
                            <option value="active">Actif</option>
                            <option value="inactive">Inactif</option>
                        </select>
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="actif" name="actif" checked>
                        <label class="form-check-label" for="actif">Région active</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-primary" onclick="saveRegion()">Enregistrer</button>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
// Graphique de performance par région
const ctx = document.getElementById('performanceChart').getContext('2d');
const performanceChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: {{ regions|map(r => r.name)|json_encode|raw }},
        datasets: [{
            label: 'Performance (%)',
            data: {{ regions|map(r => r.performance_rate|default(0))|json_encode|raw }},
            backgroundColor: [
                'rgba(75, 192, 192, 0.2)',
                'rgba(255, 99, 132, 0.2)',
                'rgba(255, 205, 86, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(75, 192, 192, 1)',
                'rgba(255, 99, 132, 1)',
                'rgba(255, 205, 86, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false,
        scales: {
            y: {
                beginAtZero: true,
                max: 100
            }
        }
    }
});

function refreshSupervision() {
    location.reload();
}

function showAddRegionModal() {
    document.getElementById('regionModalTitle').textContent = 'Ajouter une Région';
    document.getElementById('regionForm').reset();
    new bootstrap.Modal(document.getElementById('regionModal')).show();
}

function editRegion(id) {
    // Charger les données de la région et afficher le modal
    fetch(`/direction-generale/supervision/region/${id}/edit`)
        .then(response => response.json())
        .then(data => {
            document.getElementById('regionModalTitle').textContent = 'Modifier la Région';
            // Remplir le formulaire avec les données
            Object.keys(data).forEach(key => {
                const element = document.getElementById(key);
                if (element) {
                    element.value = data[key];
                }
            });
            new bootstrap.Modal(document.getElementById('regionModal')).show();
        });
}

function saveRegion() {
    const form = document.getElementById('regionForm');
    const formData = new FormData(form);
    
    fetch('/direction-generale/supervision/region/save', {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            location.reload();
        } else {
            alert('Erreur: ' + data.message);
        }
    });
}

function toggleRegion(id, status) {
    fetch(`/direction-generale/supervision/region/${id}/toggle`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ active: status })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            location.reload();
        }
    });
}

function deleteRegion(id) {
    if (confirm('Êtes-vous sûr de vouloir supprimer cette région ?')) {
        fetch(`/direction-generale/supervision/region/${id}/delete`, {
            method: 'POST'
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            }
        });
    }
}

function viewRegion(id) {
    window.location.href = `/direction-generale/supervision/region/${id}`;
}
</script>
{% endblock %}
