{% extends 'base.html.twig' %}

{% block title %}Ajouter une Région - Direction Générale{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
            <div class="position-sticky pt-3">
                <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                    <span>Direction Générale</span>
                </h6>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_direction_generale_dashboard') }}">
                            <i class="fas fa-tachometer-alt"></i> Tableau de Bord
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_direction_generale_statistiques') }}">
                            <i class="fas fa-chart-bar"></i> Statistiques Nationales
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('app_direction_generale_supervision') }}">
                            <i class="fas fa-eye"></i> Supervision Régions
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_direction_generale_rapports') }}">
                            <i class="fas fa-file-alt"></i> Rapports Consolidés
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_direction_generale_performance') }}">
                            <i class="fas fa-chart-line"></i> Performance
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_direction_generale_planification') }}">
                            <i class="fas fa-calendar-alt"></i> Planification
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Ajouter une Nouvelle Région</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <a href="{{ path('app_direction_generale_supervision') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Retour
                    </a>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="card shadow">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Informations de la Région</h6>
                        </div>
                        <div class="card-body">
                            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                            
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        {{ form_label(form.code, 'Code Région*', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.code, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.code) }}
                                        <div class="form-text">Code unique d'identification (ex: CON, KIN, LAB)</div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        {{ form_label(form.libelle, 'Nom de la Région*', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.libelle, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.libelle) }}
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        {{ form_label(form.directeur, 'Directeur Régional', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.directeur, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.directeur) }}
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.email) }}
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        {{ form_label(form.telephone, 'Téléphone', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.telephone) }}
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        {{ form_label(form.actif, 'Région Active', {'label_attr': {'class': 'form-label'}}) }}
                                        <div class="form-check mt-2">
                                            {{ form_widget(form.actif, {'attr': {'class': 'form-check-input'}}) }}
                                            {{ form_label(form.actif, 'Cochez pour activer cette région', {'label_attr': {'class': 'form-check-label'}}) }}
                                        </div>
                                        {{ form_errors(form.actif) }}
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-12 mb-3">
                                        {{ form_label(form.adresse, 'Adresse', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.adresse) }}
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-12 mb-3">
                                        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.description) }}
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-12">
                                        <div class="d-flex justify-content-between">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fas fa-save"></i> Enregistrer la Région
                                            </button>
                                            <a href="{{ path('app_direction_generale_supervision') }}" class="btn btn-secondary">
                                                <i class="fas fa-times"></i> Annuler
                                            </a>
                                        </div>
                                    </div>
                                </div>

                                {{ form_rest(form) }}
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

{% endblock %}
