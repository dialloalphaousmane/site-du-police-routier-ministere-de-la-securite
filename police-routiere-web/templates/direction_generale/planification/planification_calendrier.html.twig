{% extends 'base.html.twig' %}

{% block title %}Calendrier - Planification (DG){% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
.calendar-item {
    border-left: 4px solid #0d6efd;
}
</style>
{% endblock %}

{% block body %}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">
            <i class="bi bi-shield-check me-2"></i>
            Police Routière Guinée - Direction Générale
        </a>

        <div class="navbar-nav ms-auto">
            <div class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                    <i class="bi bi-person-circle me-1"></i>
                    {{ app.user.email }}
                </a>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i>Profil</a></li>
                    <li><a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i>Paramètres</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="{{ path('app_logout') }}"><i class="bi bi-box-arrow-right me-2"></i>Déconnexion</a></li>
                </ul>
            </div>
        </div>
    </div>
</nav>

<div class="container mt-4">
    <div class="row">
        <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_direction_generale_dashboard') }}">
                            <i class="bi bi-speedometer2 me-2"></i>Vue d'ensemble
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_direction_generale_statistiques') }}">
                            <i class="bi bi-graph-up me-2"></i>Statistiques nationales
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_direction_generale_supervision') }}">
                            <i class="bi bi-geo-alt me-2"></i>Supervision régions
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_direction_generale_rapports') }}">
                            <i class="bi bi-file-text me-2"></i>Rapports consolidés
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_direction_generale_performance') }}">
                            <i class="bi bi-trophy me-2"></i>Performance
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('app_direction_generale_planification') }}">
                            <i class="bi bi-calendar3 me-2"></i>Planification
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Calendrier</h1>
                <a href="{{ path('app_direction_generale_planification') }}" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i>Retour
                </a>
            </div>

            {% for type, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Événements</h6>
                </div>
                <div class="card-body">
                    {% if events is empty %}
                        <div class="text-muted">Aucun événement.</div>
                    {% else %}
                        <div class="list-group">
                            {% for event in events %}
                                <div class="list-group-item calendar-item">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">{{ event.title }}</h6>
                                        <small class="text-muted">{{ event.date|date('d/m/Y') }}</small>
                                    </div>
                                    <div class="text-muted small">Type: {{ event.type }}</div>
                                    {% if event.plan_id is defined %}
                                        <div class="mt-2">
                                            <a class="btn btn-sm btn-outline-primary" href="{{ path('app_direction_generale_planification_details', {'id': event.plan_id}) }}">
                                                Voir le plan
                                            </a>
                                        </div>
                                    {% endif %}
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </main>
    </div>
</div>
{% endblock %}
