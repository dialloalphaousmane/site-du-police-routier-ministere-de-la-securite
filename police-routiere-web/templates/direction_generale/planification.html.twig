}

// Mettre en évidence les jours avec des opérations
document.addEventListener('DOMContentLoaded', function() {
    // Ajouter des indicateurs visuels pour les jours avec des opérations
    const daysWithOperations = [5, 8, 12, 15, 19, 22, 26, 29];
    const calendarCells = document.querySelectorAll('#calendar tbody td');
    
    calendarCells.forEach((cell, index) => {
        const dayNumber = parseInt(cell.textContent);
        if (daysWithOperations.includes(dayNumber)) {
            cell.style.backgroundColor = '#e3f2fd';
            cell.style.fontWeight = 'bold';
        }
    });
});
