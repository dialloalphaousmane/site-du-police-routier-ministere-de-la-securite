{% extends 'base.html.twig' %}

{% block title %}Détails Région - Statistiques Nationales{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link href="{{ asset('css/dashboard.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">
            <i class="bi bi-shield-check me-2"></i>
            Police Routière Guinée - Direction Générale
        </a>
        <div class="navbar-nav ms-auto">
            <div class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                    <i class="bi bi-person-circle me-1"></i>
                    {{ app.user.email }}
                </a>
                <ul class="dropdown-menu">
                    <li>
                        <form method="post" action="{{ path('app_logout') }}">
                            <button type="submit" class="dropdown-item">
                                <i class="bi bi-box-arrow-right me-2"></i>Déconnexion
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</nav>

<div class="container-fluid">
    <div class="row">
        <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_direction_generale_statistiques') }}">
                            <i class="bi bi-arrow-left me-2"></i>Retour
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Détails - {{ region.name }}</h1>
            </div>

            <div class="row mb-4">
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Agents</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ region.active_agents|number_format(0, '.', ' ') }} / {{ region.agents|number_format(0, '.', ' ') }}</div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Contrôles (jour)</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ region.controls_today|number_format(0, '.', ' ') }}</div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-info shadow h-100 py-2">
                        <div class="card-body">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Infractions (mois)</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ region.infractions_month|number_format(0, '.', ' ') }}</div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-warning shadow h-100 py-2">
                        <div class="card-body">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Recettes (mois)</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ region.revenue_month|number_format(0, '.', ' ') }} GNF</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Synthèse</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Code:</strong> {{ region.code }}</p>
                            <p><strong>Directeur:</strong> {{ region.director|default('-') }}</p>
                            <p><strong>Email:</strong> {{ region.email|default('-') }}</p>
                            <p><strong>Téléphone:</strong> {{ region.telephone|default('-') }}</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Brigades:</strong> {{ region.brigades|number_format(0, '.', ' ') }}</p>
                            <p><strong>Contrôles (mois):</strong> {{ region.controls_month|number_format(0, '.', ' ') }}</p>
                            <p><strong>Infractions (jour):</strong> {{ region.infractions_today|number_format(0, '.', ' ') }}</p>
                            <p><strong>Performance:</strong> {{ region.performance_rate }}%</p>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
{% endblock %}
