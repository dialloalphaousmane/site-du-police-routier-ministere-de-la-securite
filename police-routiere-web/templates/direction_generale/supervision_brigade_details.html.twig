{% extends 'base.html.twig' %}

{% block title %}Détails Brigade - Supervision{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link href="{{ asset('css/dashboard.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">
            <i class="bi bi-shield-check me-2"></i>
            Police Routière Guinée - Direction Générale
        </a>
        <div class="navbar-nav ms-auto">
            <div class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                    <i class="bi bi-person-circle me-1"></i>
                    {{ app.user.email }}
                </a>
                <ul class="dropdown-menu">
                    <li>
                        <form method="post" action="{{ path('app_logout') }}">
                            <button type="submit" class="dropdown-item">
                                <i class="bi bi-box-arrow-right me-2"></i>Déconnexion
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</nav>

<div class="container-fluid">
    <div class="row">
        <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_direction_generale_supervision') }}">
                            <i class="bi bi-arrow-left me-2"></i>Retour
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Brigade - {{ brigade.name }}</h1>
            </div>

            <div class="row mb-4">
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Agents actifs</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ brigade.active_agents|number_format(0, '.', ' ') }} / {{ brigade.agents_count|number_format(0, '.', ' ') }}</div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Contrôles (jour)</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ brigade.controls_today|number_format(0, '.', ' ') }}</div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-info shadow h-100 py-2">
                        <div class="card-body">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Recettes (mois)</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ brigade.revenue_month|number_format(0, '.', ' ') }} GNF</div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-warning shadow h-100 py-2">
                        <div class="card-body">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Performance</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ brigade.performance_rate }}%</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Agents</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Grade</th>
                                    <th>Statut</th>
                                    <th>Contrôles (jour)</th>
                                    <th>Performance</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for a in agents %}
                                <tr>
                                    <td>{{ a.name }}</td>
                                    <td>{{ a.grade|default('-') }}</td>
                                    <td>
                                        {% if a.status == 'Actif' %}
                                            <span class="badge bg-success">Actif</span>
                                        {% else %}
                                            <span class="badge bg-secondary">Inactif</span>
                                        {% endif %}
                                    </td>
                                    <td>{{ a.controls_today|default(0) }}</td>
                                    <td>{{ a.performance_rate|default(0) }}%</td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="5" class="text-center text-muted">Aucun agent</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
{% endblock %}
