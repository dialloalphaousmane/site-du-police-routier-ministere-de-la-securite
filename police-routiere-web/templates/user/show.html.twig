{% extends 'base.html.twig' %}

{% block title %}Détails Utilisateur - {{ user.nom }} {{ user.prenom }} - Police Routière Guinée{% endblock %}

{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
<style>
    .user-header {
        background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%);
        color: white;
        padding: 2rem 0;
        margin-bottom: 2rem;
    }
    .user-avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        background: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        color: #1e3a8a;
        margin: 0 auto 1rem;
    }
    .info-card {
        border-left: 4px solid #1e3a8a;
        margin-bottom: 1rem;
    }
    .status-badge {
        font-size: 0.9em;
        padding: 6px 12px;
        border-radius: 20px;
    }
    .status-active {
        background-color: #10b981;
        color: white;
    }
    .status-inactive {
        background-color: #6b7280;
        color: white;
    }
    .role-badge {
        background-color: #3b82f6;
        color: white;
        font-size: 0.8em;
        padding: 4px 8px;
        border-radius: 12px;
        margin-right: 5px;
    }
    .action-buttons {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }
</style>
{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_dashboard') }}">
                            <i class="bi bi-speedometer2 me-2"></i>Tableau de bord
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('app_user_index') }}">
                            <i class="bi bi-people me-2"></i>Gestion utilisateurs
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_admin_region_index') }}">
                            <i class="bi bi-geo-alt me-2"></i>Régions
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_admin_brigade_index') }}">
                            <i class="bi bi-shield me-2"></i>Brigades
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_admin_report_index') }}">
                            <i class="bi bi-file-text me-2"></i>Rapports
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_admin_export_users') }}">
                            <i class="bi bi-download me-2"></i>Export
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_admin_config_index') }}">
                            <i class="bi bi-gear me-2"></i>Configuration
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_admin_log_index') }}">
                            <i class="bi bi-journal-text me-2"></i>Logs d'audit
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_admin_notification_index') }}">
                            <i class="bi bi-bell me-2"></i>Notifications
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <!-- Flash Messages -->
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="alert alert-{{ type == 'error' ? 'danger' : type }} alert-dismissible fade show mt-3" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            <!-- User Header -->
            <div class="user-header">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-md-3 text-center">
                            <div class="user-avatar">
                                <i class="bi bi-person-fill"></i>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h1 class="display-6">{{ user.nom }} {{ user.prenom }}</h1>
                            <p class="lead mb-2">{{ user.email }}</p>
                            <div class="d-flex align-items-center gap-2">
                                <span class="status-badge {{ user.isActive ? 'status-active' : 'status-inactive' }}">
                                    {{ user.isActive ? 'Actif' : 'Inactif' }}
                                </span>
                                {% for role in user.roles %}
                                    {% if role != 'ROLE_USER' %}
                                        <span class="role-badge">{{ role|replace({'ROLE_': ''}) }}</span>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                        <div class="col-md-3 text-end">
                            <div class="action-buttons justify-content-end">
                                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-light">
                                    <i class="bi bi-pencil me-1"></i>Modifier
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- User Information -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="card info-card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="bi bi-person me-2"></i>Informations personnelles
                            </h5>
                        </div>
                        <div class="card-body">
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Nom complet:</strong></td>
                                    <td>{{ user.nom }} {{ user.prenom }}</td>
                                </tr>
                                <tr>
                                    <td><strong>Email:</strong></td>
                                    <td>{{ user.email }}</td>
                                </tr>
                                <tr>
                                    <td><strong>Téléphone:</strong></td>
                                    <td>{{ user.telephone ?? 'Non renseigné' }}</td>
                                </tr>
                                <tr>
                                    <td><strong>ID Utilisateur:</strong></td>
                                    <td>#{{ user.id }}</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card info-card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="bi bi-geo-alt me-2"></i>Affectation
                            </h5>
                        </div>
                        <div class="card-body">
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Région:</strong></td>
                                    <td>{{ user.region ? user.region.libelle : 'Non assigné' }}</td>
                                </tr>
                                <tr>
                                    <td><strong>Brigade:</strong></td>
                                    <td>{{ user.brigade ? user.brigade.libelle : 'Non assigné' }}</td>
                                </tr>
                                <tr>
                                    <td><strong>Rôle principal:</strong></td>
                                    <td>{{ user.role ? user.role.libelle : 'Non défini' }}</td>
                                </tr>
                                <tr>
                                    <td><strong>Statut:</strong></td>
                                    <td>
                                        <span class="status-badge {{ user.isActive ? 'status-active' : 'status-inactive' }}">
                                            {{ user.isActive ? 'Actif' : 'Inactif' }}
                                        </span>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Actions -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-gear me-2"></i>Actions disponibles
                    </h5>
                </div>
                <div class="card-body">
                    <div class="action-buttons">
                        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary">
                            <i class="bi bi-pencil me-1"></i>Modifier
                        </a>
                        {% if user.isActive %}
                            <form method="post" action="{{ path('app_user_toggle_active', {'id': user.id}) }}" style="display: inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ user.id) }}">
                                <button type="submit" class="btn btn-warning" onclick="return confirm('Êtes-vous sûr de vouloir désactiver cet utilisateur ?')">
                                    <i class="bi bi-pause me-1"></i>Désactiver
                                </button>
                            </form>
                        {% else %}
                            <form method="post" action="{{ path('app_user_toggle_active', {'id': user.id}) }}" style="display: inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ user.id) }}">
                                <button type="submit" class="btn btn-success" onclick="return confirm('Êtes-vous sûr de vouloir activer cet utilisateur ?')">
                                    <i class="bi bi-play me-1"></i>Activer
                                </button>
                            </form>
                        {% endif %}
                        <form method="post" action="{{ path('app_user_reset_password', {'id': user.id}) }}" style="display: inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('reset' ~ user.id) }}">
                            <button type="submit" class="btn btn-info" onclick="return confirm('Êtes-vous sûr de vouloir réinitialiser le mot de passe ?')">
                                <i class="bi bi-key me-1"></i>Réinitialiser mot de passe
                            </button>
                        </form>
                        {% if user != app.user %}
                            <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" style="display: inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ? Cette action est irréversible !')">
                                    <i class="bi bi-trash me-1"></i>Supprimer
                                </button>
                            </form>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Timeline -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-clock-history me-2"></i>Historique
                    </h5>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item">
                            <div class="timeline-marker bg-primary"></div>
                            <div class="timeline-content">
                                <h6>Création du compte</h6>
                                <p class="text-muted">{{ user.createdAt ? user.createdAt|date('d/m/Y H:i') : 'Inconnu' }}</p>
                            </div>
                        </div>
                        <div class="timeline-item">
                            <div class="timeline-marker bg-info"></div>
                            <div class="timeline-content">
                                <h6>Dernière modification</h6>
                                <p class="text-muted">{{ user.updatedAt ? user.updatedAt|date('d/m/Y H:i') : 'Inconnu' }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Navigation -->
            <div class="mt-4">
                <a href="{{ path('app_user_index') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i>Retour à la liste
                </a>
            </div>
        </main>
    </div>
</div>

<style>
.timeline {
    position: relative;
    padding-left: 30px;
}

.timeline::before {
    content: '';
    position: absolute;
    left: 10px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: #e5e7eb;
}

.timeline-item {
    position: relative;
    margin-bottom: 30px;
}

.timeline-marker {
    position: absolute;
    left: -25px;
    top: 5px;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    border: 2px solid white;
}

.timeline-content h6 {
    margin-bottom: 5px;
    color: #1f2937;
}

.timeline-content p {
    margin-bottom: 0;
    font-size: 0.9em;
}
</style>
{% endblock %}

{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
