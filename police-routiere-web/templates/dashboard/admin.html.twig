{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
// Dashboard JavaScript
document.addEventListener('DOMContentLoaded', function() {
    // Chart.js configuration
    Chart.defaults.font.family = 'system-ui, -apple-system, sans-serif';
    
    // Initialize charts
    initializeCharts();
    
    // Auto-refresh stats every 30 seconds
    setInterval(refreshStats, 30000);
});

function initializeCharts() {
    // Controls Chart
    const controlsCtx = document.getElementById('controlsChart');
    if (controlsCtx) {
        new Chart(controlsCtx, {
            type: 'line',
            data: {
                labels: {{ controlsChart.labels|json_encode() }},
                datasets: [{
                    label: 'Contrôles quotidiens',
                    data: {{ controlsChart.data|json_encode() }},
                    borderColor: '#1e3a8a',
                    backgroundColor: 'rgba(30, 58, 138, 0.1)',
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        display: true,
                        position: 'top'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    }
    
    // Infractions Chart
    const infractionsCtx = document.getElementById('infractionsChart');
    if (infractionsCtx) {
        new Chart(infractionsCtx, {
            type: 'doughnut',
            data: {
                labels: {{ infractionsByType.labels|json_encode() }},
                datasets: [{
                    data: {{ infractionsByType.data|json_encode() }},
                    backgroundColor: [
                        '#ef4444',
                        '#f59e0b',
                        '#10b981',
                        '#3b82f6',
                        '#8b5cf6'
                    ]
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'right'
                    }
                }
            }
        });
    }
    
    // Regions Chart
    const regionsCtx = document.getElementById('regionsChart');
    if (regionsCtx) {
        new Chart(regionsCtx, {
            type: 'bar',
            data: {
                labels: {{ controlsByRegion.labels|json_encode() }},
                datasets: [{
                    label: 'Activité par région',
                    data: {{ controlsByRegion.data|json_encode() }},
                    backgroundColor: '#1e3a8a'
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    }
}

function refreshStats() {
    fetch('/api/stats/realtime')
        .then(response => response.json())
        .then(data => {
            // Update statistics cards
            updateStatCard('totalUsers', data.users);
            updateStatCard('totalControls', data.controls);
            updateStatCard('totalInfractions', data.infractions);
            updateStatCard('totalReports', data.reports);
        })
        .catch(error => console.error('Error refreshing stats:', error));
}

function updateStatCard(id, value) {
    const element = document.getElementById(id);
    if (element) {
        element.textContent = value;
        element.classList.add('animate-pulse');
        setTimeout(() => {
            element.classList.remove('animate-pulse');
        }, 1000);
    }
}
</script>
