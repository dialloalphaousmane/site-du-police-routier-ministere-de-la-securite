{% extends 'base.html.twig' %}

{% block title %}Gestion des Brigades - Police Routière Guinée{% endblock %}

{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_dashboard') }}">
                            <i class="bi bi-speedometer2 me-2"></i>Tableau de bord
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_user_index') }}">
                            <i class="bi bi-people me-2"></i>Gestion utilisateurs
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_admin_region_index') }}">
                            <i class="bi bi-geo-alt me-2"></i>Régions
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('app_admin_brigade_index') }}">
                            <i class="bi bi-shield me-2"></i>Brigades
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_admin_report_index') }}">
                            <i class="bi bi-file-text me-2"></i>Rapports
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_admin_export_users') }}">
                            <i class="bi bi-download me-2"></i>Export
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_admin_config_index') }}">
                            <i class="bi bi-gear me-2"></i>Configuration
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_admin_log_index') }}">
                            <i class="bi bi-journal-text me-2"></i>Logs d'audit
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_admin_notification_index') }}">
                            <i class="bi bi-bell me-2"></i>Notifications
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Gestion des Brigades</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group me-2">
                        <a href="{{ path('app_admin_brigade_new') }}" class="btn btn-primary">
                            <i class="bi bi-plus-circle me-1"></i>Nouvelle brigade
                        </a>
                    </div>
                    <div class="btn-group me-2">
                        <a href="{{ path('app_admin_export_brigades') }}" class="btn btn-success">
                            <i class="bi bi-download me-1"></i>Export CSV
                        </a>
                    </div>
                </div>
            </div>

            <!-- Flash Messages -->
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="alert alert-{{ type == 'error' ? 'danger' : type }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            <!-- Table -->
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Code</th>
                                    <th>Nom</th>
                                    <th>Chef</th>
                                    <th>Région</th>
                                    <th>Localité</th>
                                    <th>Email</th>
                                    <th>Statut</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for brigade in brigades %}
                                    <tr>
                                        <td><strong>{{ brigade.code }}</strong></td>
                                        <td>{{ brigade.libelle }}</td>
                                        <td>{{ brigade.chef ?? '-' }}</td>
                                        <td>
                                            {% if brigade.region %}
                                                <span class="badge bg-info">{{ brigade.region.libelle }}</span>
                                            {% else %}
                                                -
                                            {% endif %}
                                        </td>
                                        <td>{{ brigade.localite }}</td>
                                        <td>{{ brigade.email ?? '-' }}</td>
                                        <td>
                                            {% if brigade.actif %}
                                                <span class="badge bg-success">Actif</span>
                                            {% else %}
                                                <span class="badge bg-secondary">Inactif</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a href="{{ path('app_admin_brigade_show', {'id': brigade.id}) }}" class="btn btn-outline-primary" title="Voir">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a href="{{ path('app_admin_brigade_edit', {'id': brigade.id}) }}" class="btn btn-outline-warning" title="Modifier">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <form method="post" action="{{ path('app_admin_brigade_toggle', {'id': brigade.id}) }}" style="display: inline;">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ brigade.id) }}">
                                                    <button type="submit" class="btn btn-outline-{{ brigade.actif ? 'secondary' : 'success' }}" title="{{ brigade.actif ? 'Désactiver' : 'Activer' }}">
                                                        <i class="bi bi-{{ brigade.actif ? 'pause' : 'play' }}"></i>
                                                    </button>
                                                </form>
                                                <form method="post" action="{{ path('app_admin_brigade_delete', {'id': brigade.id}) }}" style="display: inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette brigade ?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ brigade.id) }}">
                                                    <button type="submit" class="btn btn-outline-danger" title="Supprimer">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="8" class="text-center text-muted">
                                            <i class="bi bi-inbox me-2"></i>Aucune brigade trouvée
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
