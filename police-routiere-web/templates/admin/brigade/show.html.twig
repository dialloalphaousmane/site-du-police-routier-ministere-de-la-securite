{% extends 'base.html.twig' %}

{% block title %}Détails de la Brigade - Police Routière Guinée{% endblock %}

{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_dashboard_admin') }}">
                            <i class="bi bi-speedometer2 me-2"></i>Tableau de bord
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_admin_region_index') }}">
                            <i class="bi bi-geo-alt me-2"></i>Régions
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('app_admin_brigade_index') }}">
                            <i class="bi bi-shield me-2"></i>Brigades
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="bi bi-people me-2"></i>Utilisateurs
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Détails de la Brigade</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <a href="{{ path('app_admin_brigade_index') }}" class="btn btn-secondary me-2">
                        <i class="bi bi-arrow-left me-1"></i>Retour
                    </a>
                    <a href="{{ path('app_admin_brigade_edit', {'id': brigade.id}) }}" class="btn btn-primary">
                        <i class="bi bi-pencil me-1"></i>Modifier
                    </a>
                </div>
            </div>

            <!-- Brigade Details -->
            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="bi bi-shield me-2"></i>Informations de la brigade
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <table class="table table-borderless">
                                        <tr>
                                            <td class="fw-bold">Code:</td>
                                            <td><span class="badge bg-primary">{{ brigade.code }}</span></td>
                                        </tr>
                                        <tr>
                                            <td class="fw-bold">Nom:</td>
                                            <td>{{ brigade.libelle }}</td>
                                        </tr>
                                        <tr>
                                            <td class="fw-bold">Chef:</td>
                                            <td>{{ brigade.chef ?? '-' }}</td>
                                        </tr>
                                        <tr>
                                            <td class="fw-bold">Email:</td>
                                            <td>
                                                {% if brigade.email %}
                                                    <a href="mailto:{{ brigade.email }}">{{ brigade.email }}</a>
                                                {% else %}
                                                    -
                                                {% endif %}
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="fw-bold">Téléphone:</td>
                                            <td>
                                                {% if brigade.telephone %}
                                                    <a href="tel:{{ brigade.telephone }}">{{ brigade.telephone }}</a>
                                                {% else %}
                                                    -
                                                {% endif %}
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-md-6">
                                    <table class="table table-borderless">
                                        <tr>
                                            <td class="fw-bold">Statut:</td>
                                            <td>
                                                {% if brigade.actif %}
                                                    <span class="badge bg-success">Actif</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">Inactif</span>
                                                {% endif %}
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="fw-bold">Région:</td>
                                            <td>
                                                {% if brigade.region %}
                                                    <span class="badge bg-info">{{ brigade.region.libelle }}</span>
                                                {% else %}
                                                    -
                                                {% endif %}
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="fw-bold">Localité:</td>
                                            <td>{{ brigade.localite }}</td>
                                        </tr>
                                        <tr>
                                            <td class="fw-bold">Date de création:</td>
                                            <td>{{ brigade.createdAt ? brigade.createdAt|date('d/m/Y H:i') : '-' }}</td>
                                        </tr>
                                        <tr>
                                            <td class="fw-bold">Nombre d'agents:</td>
                                            <td>{{ brigade.agents|length }}</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                            
                            {% if brigade.adresse %}
                                <div class="mt-3">
                                    <h6 class="fw-bold">Adresse:</h6>
                                    <p class="text-muted">{{ brigade.adresse|nl2br }}</p>
                                </div>
                            {% endif %}
                            
                            {% if brigade.zoneCouverture %}
                                <div class="mt-3">
                                    <h6 class="fw-bold">Zone de couverture:</h6>
                                    <p class="text-muted">{{ brigade.zoneCouverture|nl2br }}</p>
                                </div>
                            {% endif %}
                            
                            {% if brigade.description %}
                                <div class="mt-3">
                                    <h6 class="fw-bold">Description:</h6>
                                    <p class="text-muted">{{ brigade.description|nl2br }}</p>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <!-- Statistics -->
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="bi bi-graph-up me-2"></i>Statistiques
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span>Agents</span>
                                <span class="badge bg-primary">{{ brigade.agents|length }}</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span>Contrôles</span>
                                <span class="badge bg-success">{{ brigade.controles|length }}</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <span>Statut</span>
                                <span class="badge bg-{{ brigade.actif ? 'success' : 'secondary' }}">
                                    {{ brigade.actif ? 'Actif' : 'Inactif' }}
                                </span>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Actions -->
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="bi bi-gear me-2"></i>Actions
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a href="{{ path('app_admin_brigade_edit', {'id': brigade.id}) }}" class="btn btn-warning">
                                    <i class="bi bi-pencil me-2"></i>Modifier
                                </a>
                                <form method="post" action="{{ path('app_admin_brigade_toggle', {'id': brigade.id}) }}">
                                    <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ brigade.id) }}">
                                    <button type="submit" class="btn btn-{{ brigade.actif ? 'secondary' : 'success' }} w-100">
                                        <i class="bi bi-{{ brigade.actif ? 'pause' : 'play' }} me-2"></i>
                                        {{ brigade.actif ? 'Désactiver' : 'Activer' }}
                                    </button>
                                </form>
                                <form method="post" action="{{ path('app_admin_brigade_delete', {'id': brigade.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette brigade ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ brigade.id) }}">
                                    <button type="submit" class="btn btn-danger w-100">
                                        <i class="bi bi-trash me-2"></i>Supprimer
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
