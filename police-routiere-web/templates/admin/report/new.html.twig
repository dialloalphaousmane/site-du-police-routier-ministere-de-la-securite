{% extends 'base.html.twig' %}

{% block title %}Nouveau Rapport - Police Routière Guinée{% endblock %}

{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_dashboard_admin') }}">
                            <i class="bi bi-speedometer2 me-2"></i>Tableau de bord
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_admin_region_index') }}">
                            <i class="bi bi-geo-alt me-2"></i>Régions
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_admin_brigade_index') }}">
                            <i class="bi bi-shield me-2"></i>Brigades
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('app_admin_report_index') }}">
                            <i class="bi bi-file-text me-2"></i>Rapports
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="bi bi-people me-2"></i>Utilisateurs
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Nouveau Rapport</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <a href="{{ path('app_admin_report_index') }}" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-1"></i>Retour
                    </a>
                </div>
            </div>

            <!-- Flash Messages -->
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="alert alert-{{ type == 'error' ? 'danger' : type }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            <!-- Form -->
            <div class="card">
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.titre, 'Titre du rapport *', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.titre, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                                {{ form_errors(form.titre) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.type, 'Type de rapport *', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.type, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                                {{ form_errors(form.type) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.region, 'Région', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.region, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.region) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.brigade, 'Brigade', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.brigade, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.brigade) }}
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.contenu, 'Contenu du rapport *', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.contenu, {'attr': {'class': 'form-control', 'required': 'required', 'rows': 10}}) }}
                        {{ form_errors(form.contenu) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.observations, 'Observations', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.observations, {'attr': {'class': 'form-control', 'rows': 3}}) }}
                        {{ form_errors(form.observations) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.actif, 'Rapport actif', {'label_attr': {'class': 'form-label'}}) }}
                        <div class="form-check mt-2">
                            {{ form_widget(form.actif, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(form.actif, 'Cochez pour activer ce rapport', {'label_attr': {'class': 'form-check-label'}}) }}
                        </div>
                        {{ form_errors(form.actif) }}
                    </div>

                    <div class="d-flex justify-content-end">
                        <a href="{{ path('app_admin_report_index') }}" class="btn btn-secondary me-2">
                            <i class="bi bi-x-circle me-1"></i>Annuler
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-1"></i>Créer le rapport
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </main>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
// Bootstrap form validation
(function () {
    'use strict'
    var forms = document.querySelectorAll('.needs-validation')
    Array.prototype.slice.call(forms).forEach(function (form) {
        form.addEventListener('submit', function (event) {
            if (!form.checkValidity()) {
                event.preventDefault()
                event.stopPropagation()
            }
            form.classList.add('was-validated')
        }, false)
    })
})()
</script>
{% endblock %}
