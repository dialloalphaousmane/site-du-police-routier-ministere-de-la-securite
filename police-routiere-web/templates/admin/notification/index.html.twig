{% extends 'base.html.twig' %}

{% block title %}Notifications - Police Routière Guinée{% endblock %}

{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
<style>
    .notification-card {
        transition: transform 0.2s;
        border-left: 4px solid #1e3a8a;
    }
    .notification-card:hover {
        transform: translateY(-2px);
    }
    .status-badge {
        font-size: 0.8em;
        padding: 4px 8px;
        border-radius: 12px;
    }
    .status-active {
        background-color: #10b981;
        color: white;
    }
    .status-inactive {
        background-color: #6b7280;
        color: white;
    }
    .test-btn {
        margin: 5px;
    }
    .config-section {
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 20px;
    }
</style>
{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_dashboard_admin') }}">
                            <i class="bi bi-speedometer2 me-2"></i>Tableau de bord
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_admin_region_index') }}">
                            <i class="bi bi-geo-alt me-2"></i>Régions
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_admin_brigade_index') }}">
                            <i class="bi bi-shield me-2"></i>Brigades
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_admin_report_index') }}">
                            <i class="bi bi-file-text me-2"></i>Rapports
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_admin_export_users') }}">
                            <i class="bi bi-download me-2"></i>Export
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_admin_log_index') }}">
                            <i class="bi bi-journal-text me-2"></i>Logs
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_admin_config_index') }}">
                            <i class="bi bi-gear me-2"></i>Configuration
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('app_admin_notification_index') }}">
                            <i class="bi bi-bell me-2"></i>Notifications
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Gestion des Notifications</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group me-2">
                        <button type="button" class="btn btn-info" onclick="checkStatus()">
                            <i class="bi bi-check-circle me-1"></i>Vérifier le statut
                        </button>
                    </div>
                </div>
            </div>

            <!-- Flash Messages -->
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="alert alert-{{ type == 'error' ? 'danger' : type }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            <!-- Configuration Section -->
            <div class="config-section">
                <h3><i class="bi bi-gear me-2"></i>Configuration des Notifications</h3>
                <form id="notificationConfigForm">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-check form-switch mb-3">
                                <input class="form-check-input" type="checkbox" id="email_enabled" {{ email_enabled ? 'checked' : '' }}>
                                <label class="form-check-label" for="email_enabled">
                                    <strong>Activer les notifications par email</strong>
                                    <small class="d-block text-muted">Permet d'envoyer des notifications par email</small>
                                </label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check form-switch mb-3">
                                <input class="form-check-input" type="checkbox" id="rapport_validation" {{ rapport_validation ? 'checked' : '' }}>
                                <label class="form-check-label" for="rapport_validation">
                                    <strong>Validation de rapports</strong>
                                    <small class="d-block text-muted">Notifier lors de la validation d'un rapport</small>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-check form-switch mb-3">
                                <input class="form-check-input" type="checkbox" id="nouveau_controle" {{ nouveau_controle ? 'checked' : '' }}>
                                <label class="form-check-label" for="nouveau_controle">
                                    <strong>Nouveaux contrôles</strong>
                                    <small class="d-block text-muted">Notifier lors de nouveaux contrôles</small>
                                </label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="seuil_alerte" class="form-label"><strong>Seuil d'alerte</strong></label>
                                <div class="input-group">
                                    <input type="number" class="form-control" id="seuil_alerte" value="{{ seuil_alerte }}" min="1" max="100">
                                    <span class="input-group-text">événements</span>
                                </div>
                                <small class="form-text text-muted">Déclencher une alerte au-delà de ce nombre</small>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-1"></i>Enregistrer
                        </button>
                    </div>
                </form>
            </div>

            <!-- Test Section -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-play-circle me-2"></i>Tests de Notifications
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Test de notification générale</h6>
                            <div class="mb-3">
                                <select id="testUser" class="form-select">
                                    <option value="">Envoyer à tous les administrateurs</option>
                                    {% for user in users %}
                                        <option value="{{ user.id }}">{{ user.email }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <button type="button" class="btn btn-outline-primary test-btn" onclick="testNotification('notification')">
                                <i class="bi bi-envelope me-1"></i>Test notification
                            </button>
                        </div>
                        <div class="col-md-6">
                            <h6>Tests spécifiques</h6>
                            <button type="button" class="btn btn-outline-success test-btn" onclick="testNotification('welcome')">
                                <i class="bi bi-person-plus me-1"></i>Test bienvenue
                            </button>
                            <button type="button" class="btn btn-outline-warning test-btn" onclick="testNotification('seuil_alerte')">
                                <i class="bi bi-exclamation-triangle me-1"></i>Test seuil
                            </button>
                            <button type="button" class="btn btn-outline-info test-btn" onclick="testNotification('maintenance')">
                                <i class="bi bi-tools me-1"></i>Test maintenance
                            </button>
                            <button type="button" class="btn btn-outline-secondary test-btn" onclick="testNotification('backup')">
                                <i class="bi bi-cloud-download me-1"></i>Test sauvegarde
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Status Section -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>Statut du Service
                    </h5>
                </div>
                <div class="card-body">
                    <div id="statusContent">
                        <div class="text-center">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Chargement...</span>
                            </div>
                            <p class="mt-3">Vérification du statut...</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Custom Notification Section -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-envelope me-2"></i>Notification Personnalisée
                    </h5>
                </div>
                <div class="card-body">
                    <form id="customNotificationForm">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="customRecipient" class="form-label">Destinataire</label>
                                    <select id="customRecipient" class="form-select">
                                        <option value="all">Tous les administrateurs</option>
                                        {% for user in users %}
                                            <option value="{{ user.id }}">{{ user.email }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="customSubject" class="form-label">Sujet</label>
                                    <input type="text" class="form-control" id="customSubject" placeholder="Sujet de la notification">
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="customMessage" class="form-label">Message</label>
                            <textarea class="form-control" id="customMessage" rows="3" placeholder="Contenu du message"></textarea>
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-send me-1"></i>Envoyer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </main>
    </div>
</div>

<!-- Status Modal -->
<div class="modal fade" id="statusModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Statut du Service de Notifications</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="statusModalBody">
                <!-- Content will be loaded dynamically -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Configuration form handler
    document.getElementById('notificationConfigForm').addEventListener('submit', function(e) {
        e.preventDefault();
        
        const formData = new FormData(this);
        const data = {
            email_enabled: formData.get('email_enabled') ? '1' : '0',
            rapport_validation: formData.get('rapport_validation') ? '1' : '0',
            nouveau_controle: formData.get('nouveau_controle') ? '1' : '0',
            seuil_alerte: formData.get('seuil_alerte')
        };
        
        fetch('{{ path('app_admin_notification_config') }}', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
            },
            body: new URLSearchParams(data)
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert('Configuration mise à jour avec succès!');
                location.reload();
            } else {
                alert('Erreur lors de la mise à jour: ' + data.message);
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Erreur lors de la mise à jour');
        });
    });

    // Custom notification form handler
    document.getElementById('customNotificationForm').addEventListener('submit', function(e) {
        e.preventDefault();
        
        const formData = new FormData(this);
        const data = {
            recipient: formData.get('customRecipient'),
            subject: formData.get('customSubject'),
            message: formData.get('customMessage')
        };
        
        fetch('{{ path('app_admin_notification_send') }}', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
            },
            body: new URLSearchParams(data)
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert('Notification envoyée avec succès!');
                this.reset();
            } else {
                alert('Erreur lors de l\'envoi: ' + data.message);
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Erreur lors de l\'envoi');
        });
    });
});

function testNotification(type) {
    const userId = document.getElementById('testUser').value;
    
    const data = new URLSearchParams({
        'type': type,
        'user': userId
    });
    
    fetch('{{ path('app_admin_notification_test') }}', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/x-www-form-urlencoded',
        },
        body: data
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert('Test réussi: ' + data.message);
        } else {
            alert('Test échoué: ' + data.message);
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('Erreur lors du test');
    });
}

function checkStatus() {
    fetch('{{ path('app_admin_notification_status') }}')
        .then(response => response.json())
        .then(data => {
            const statusContent = document.getElementById('statusContent');
            const statusModalBody = document.getElementById('statusModalBody');
            
            const statusHtml = `
                <div class="row">
                    <div class="col-md-6">
                        <h6>Service de notifications</h6>
                        <p><strong>Statut:</strong> <span class="status-badge status-active">${data.service_status}</span></p>
                        <p><strong>Dernière vérification:</strong> ${data.last_check}</p>
                    </div>
                    <div class="col-md-6">
                        <h6>Configuration email</h6>
                        <p><strong>Activé:</strong> <span class="status-badge ${data.email_enabled ? 'status-active' : 'status-inactive'}">${data.email_enabled ? 'Oui' : 'Non'}</span></p>
                        <p><strong>Hôte SMTP:</strong> ${data.smtp_config.host}:${data.smtp_config.port}</p>
                        <p><strong>Chiffrement:</strong> ${data.smtp_config.encryption}</p>
                    </div>
                </div>
            `;
            
            statusContent.innerHTML = statusHtml;
            statusModalBody.innerHTML = statusHtml;
            
            // Show modal
            const modal = new bootstrap.Modal(document.getElementById('statusModal'));
            modal.show();
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Erreur lors de la vérification du statut');
        });
}
</script>
{% endblock %}
