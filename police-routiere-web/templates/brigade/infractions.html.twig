{% extends 'base.html.twig' %}

{% block title %}Infractions - Brigade {{ brigade.code }}{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1><i class="bi bi-exclamation-triangle me-2"></i>Infractions - {{ brigade.nom }}</h1>
        </div>
    </div>

    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Code</th>
                        <th>Description</th>
                        <th>Date</th>
                        <th>Montant</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% if infractions|length > 0 %}
                        {% for infraction in infractions %}
                            <tr>
                                <td>
                                    <span class="badge bg-warning">{{ infraction.code }}</span>
                                </td>
                                <td>{{ infraction.description }}</td>
                                <td>
                                    <small>{{ infraction.infractionDate|date('d/m/Y') }}</small>
                                </td>
                                <td>
                                    <strong>{{ infraction.montantAmende|number_format(0, ',', ' ') }} GNF</strong>
                                </td>
                                <td class="text-end">
                                    <a href="{{ path('app_infraction_show', {id: infraction.id}) }}" class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center py-4 text-muted">Aucune infraction</td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Pagination -->
    {% if pagination.total_pages > 1 %}
        <nav aria-label="Pagination" class="mt-3">
            <ul class="pagination justify-content-center">
                {% if pagination.current_page > 1 %}
                    <li class="page-item">
                        <a class="page-link" href="?page={{ pagination.current_page - 1 }}">Précédent</a>
                    </li>
                {% endif %}
                {% for i in 1..pagination.total_pages %}
                    <li class="page-item {% if i == pagination.current_page %}active{% endif %}">
                        <a class="page-link" href="?page={{ i }}">{{ i }}</a>
                    </li>
                {% endfor %}
                {% if pagination.current_page < pagination.total_pages %}
                    <li class="page-item">
                        <a class="page-link" href="?page={{ pagination.current_page + 1 }}">Suivant</a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    {% endif %}

    <div class="mt-3">
        <a href="{{ path('app_brigade_dashboard') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-1"></i>Retour
        </a>
    </div>
</div>
{% endblock %}
