{% extends 'base.html.twig' %}

{% block title %}Agents - Brigade {{ brigade.code }}{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1><i class="bi bi-people me-2"></i>Agents - {{ brigade.nom }}</h1>
        </div>
    </div>

    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Matricule</th>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Grade</th>
                        <th>Date Embauche</th>
                        <th>Statut</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% if agents|length > 0 %}
                        {% for agent in agents %}
                            <tr>
                                <td>
                                    <span class="badge bg-primary">{{ agent.matricule }}</span>
                                </td>
                                <td>{{ agent.nom }}</td>
                                <td>{{ agent.prenom }}</td>
                                <td>
                                    <small>{{ agent.grade }}</small>
                                </td>
                                <td>
                                    <small>{{ agent.dateEmbauche|date('d/m/Y') }}</small>
                                </td>
                                <td>
                                    {% if agent.isActif %}
                                        <span class="badge bg-success">Actif</span>
                                    {% else %}
                                        <span class="badge bg-secondary">Inactif</span>
                                    {% endif %}
                                </td>
                                <td class="text-end">
                                    <a href="#" class="btn btn-sm btn-info" title="Voir">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center py-4 text-muted">
                                Aucun agent trouvé
                            </td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3">
        <a href="{{ path('app_brigade_dashboard') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-1"></i>Retour au tableau de bord
        </a>
    </div>
</div>
{% endblock %}
