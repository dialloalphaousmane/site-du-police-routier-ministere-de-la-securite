{% extends 'base.html.twig' %}

{% block title %}Contrôles - Brigade{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
.controle-card {
    transition: transform 0.2s;
    border-left: 4px solid #007bff;
}
.controle-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.15);
}
.badge-controle {
    font-size: 0.75rem;
}
.stats-card {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
}
</style>
{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_dashboard_chef_brigade') }}">
                            <i class="bi bi-speedometer2 me-2"></i>Tableau de bord
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('app_controle_index') }}">
                            <i class="bi bi-clipboard-check me-2"></i>Contrôles
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_infraction_index') }}">
                            <i class="bi bi-exclamation-triangle me-2"></i>Infractions
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_amende_index') }}">
                            <i class="bi bi-cash-stack me-2"></i>Amendes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_agent_index') }}">
                            <i class="bi bi-people me-2"></i>Équipe
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_rapport_index') }}">
                            <i class="bi bi-file-text me-2"></i>Rapports
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Contrôles de la Brigade</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group me-2">
                        <a href="{{ path('app_controle_export') }}" class="btn btn-sm btn-outline-success">
                            <i class="bi bi-download me-1"></i>Exporter CSV
                        </a>
                    </div>
                    <a href="{{ path('app_controle_new') }}" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-1"></i>Nouveau Contrôle
                    </a>
                </div>
            </div>

            <!-- Messages flash -->
            {% for type, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            <!-- Statistiques -->
            <div class="row mb-4">
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card stats-card h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-uppercase mb-1">
                                        Total Contrôles
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold">{{ controles|length }}</div>
                                </div>
                                <div class="col-auto">
                                    <i class="bi bi-clipboard-check fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card stats-card h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-uppercase mb-1">
                                        Aujourd'hui
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold">
                                        {{ controles|filter(c => c.dateControle|date('Y-m-d') == "now"|date('Y-m-d'))|length }}
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="bi bi-calendar-day fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card stats-card h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-uppercase mb-1">
                                        Cette semaine
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold">
                                        {{ controles|filter(c => c.dateControle|date('Y-W') == "now"|date('Y-W'))|length }}
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="bi bi-calendar-week fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card stats-card h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-uppercase mb-1">
                                        Ce mois
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold">
                                        {{ controles|filter(c => c.dateControle|date('Y-m') == "now"|date('Y-m'))|length }}
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="bi bi-calendar-month fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tableau des contrôles -->
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Liste des Contrôles</h6>
                </div>
                <div class="card-body">
                    {% if controles|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Lieu</th>
                                    <th>Véhicule</th>
                                    <th>Conducteur</th>
                                    <th>Agent</th>
                                    <th>Infractions</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for controle in controles %}
                                <tr>
                                    <td>{{ controle.dateControle|date('d/m/Y H:i') }}</td>
                                    <td>{{ controle.lieuControle }}</td>
                                    <td>{{ controle.marqueVehicule }} {{ controle.immatriculation }}</td>
                                    <td>{{ controle.nomConducteur }} {{ controle.prenomConducteur }}</td>
                                    <td>
                                        {% if controle.agent %}
                                            {{ controle.agent.nom }} {{ controle.agent.prenom }}
                                        {% else %}
                                            <span class="text-muted">Non assigné</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <span class="badge bg-info">{{ controle.infractions|length }}</span>
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="{{ path('app_controle_show', {'id': controle.id}) }}" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="{{ path('app_controle_edit', {'id': controle.id}) }}" class="btn btn-sm btn-outline-secondary">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form method="POST" action="{{ path('app_controle_delete', {'id': controle.id}) }}" style="display: inline;">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ controle.id) }}">
                                                <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce contrôle ?');">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% else %}
                    <div class="text-center py-5">
                        <i class="bi bi-clipboard-x fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Aucun contrôle enregistré</h5>
                        <p class="text-muted">Commencez par enregistrer votre premier contrôle.</p>
                        <a href="{{ path('app_controle_new') }}" class="btn btn-primary">
                            <i class="bi bi-plus-circle me-1"></i>Enregistrer un contrôle
                        </a>
                    </div>
                    {% endif %}
                </div>
            </div>
        </main>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
