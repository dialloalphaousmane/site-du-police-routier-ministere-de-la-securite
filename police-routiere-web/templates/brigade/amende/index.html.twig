{% extends 'base.html.twig' %}

{% block title %}Amendes - Brigade{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
.amende-card {
    transition: transform 0.2s;
    border-left: 4px solid #28a745;
}
.amende-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.15);
}
.stats-card {
    background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
    color: white;
}
.paid-card {
    background: linear-gradient(135deg, #198754 0%, #1e7e34 100%);
    color: white;
}
.unpaid-card {
    background: linear-gradient(135deg, #ffc107 0%, #e0a800 100%);
    color: white;
}
</style>
{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_dashboard_chef_brigade') }}">
                            <i class="bi bi-speedometer2 me-2"></i>Tableau de bord
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_controle_index') }}">
                            <i class="bi bi-clipboard-check me-2"></i>Contrôles
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_infraction_index') }}">
                            <i class="bi bi-exclamation-triangle me-2"></i>Infractions
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('app_amende_index') }}">
                            <i class="bi bi-cash-stack me-2"></i>Amendes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_agent_index') }}">
                            <i class="bi bi-people me-2"></i>Équipe
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_rapport_index') }}">
                            <i class="bi bi-file-text me-2"></i>Rapports
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Amendes de la Brigade</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group me-2">
                        <a href="{{ path('app_amende_statistics') }}" class="btn btn-sm btn-outline-info">
                            <i class="bi bi-bar-chart me-1"></i>Statistiques
                        </a>
                        <a href="{{ path('app_amende_export') }}" class="btn btn-sm btn-outline-success">
                            <i class="bi bi-download me-1"></i>Exporter CSV
                        </a>
                    </div>
                    <a href="{{ path('app_amende_new') }}" class="btn btn-success">
                        <i class="bi bi-plus-circle me-1"></i>Nouvelle Amende
                    </a>
                </div>
            </div>

            <!-- Messages flash -->
            {% for type, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            <!-- Statistiques -->
            <div class="row mb-4">
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card stats-card h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-uppercase mb-1">
                                        Total Amendes
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold">{{ amendes|length }}</div>
                                </div>
                                <div class="col-auto">
                                    <i class="bi bi-cash-stack fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card paid-card h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-uppercase mb-1">
                                        Montant Payé
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold">
                                        {% set paidTotal = amendes|reduce((carry, a) => carry + (a.montantPaye|default(0)), 0) %}
                                        {{ paidTotal|number_format(0, '.', ' ') }} GNF
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="bi bi-check-circle fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card unpaid-card h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-uppercase mb-1">
                                        Montant Dû
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold">
                                        {% set unpaidTotal = amendes|reduce((carry, a) => carry + (a.montantTotal|default(0) - (a.montantPaye|default(0)), 0) %}
                                        {{ unpaidTotal|number_format(0, '.', ' ') }} GNF
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="bi bi-exclamation-triangle fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card stats-card h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-uppercase mb-1">
                                        Taux de Recouvrement
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold">
                                        {% set totalAmount = amendes|reduce((carry, a) => carry + (a.montantTotal|default(0)), 0) %}
                                        {% set paidTotal = amendes|reduce((carry, a) => carry + (a.montantPaye|default(0)), 0) %}
                                        {% if totalAmount > 0 %}
                                            {{ ((paidTotal / totalAmount) * 100)|number_format(1, '.', ',') }}%
                                        {% else %}
                                            0%
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="bi bi-percent fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tableau des amendes -->
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-success">Liste des Amendes</h6>
                </div>
                <div class="card-body">
                    {% if amendes|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Référence</th>
                                    <th>Date Paiement</th>
                                    <th>Montant</th>
                                    <th>Statut</th>
                                    <th>Infraction</th>
                                    <th>Conducteur</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for amende in amendes %}
                                <tr>
                                    <td>{{ amende.reference }}</td>
                                    <td>
                                        {% if amende.datePaiement %}
                                            {{ amende.datePaiement|date('d/m/Y H:i') }}
                                        {% else %}
                                            <span class="text-muted">Non payée</span>
                                        {% endif %}
                                    </td>
                                    <td>{{ amende.montantTotal|number_format(0, '.', ' ') }} GNF</td>
                                    <td>
                                        <span class="badge bg-{{ amende.statut == 'VALIDE' ? 'success' : amende.statut == 'EN_ATTENTE' ? 'warning' : 'secondary' }}">
                                            {{ amende.statut == 'VALIDE' ? 'Payée' : amende.statut == 'EN_ATTENTE' ? 'En attente' : 'Autre' }}
                                        </span>
                                    </td>
                                    <td>
                                        <a href="{{ path('app_infraction_show', {'id': amende.infraction.id}) }}" class="btn btn-sm btn-outline-primary">
                                            #{{ amende.infraction.reference }}
                                        </a>
                                    </td>
                                    <td>
                                        <a href="{{ path('app_controle_show', {'id': amende.infraction.controle.id}) }}" class="btn btn-sm btn-outline-primary">
                                            {{ amende.infraction.controle.nomConducteur }} {{ amende.infraction.controle.prenomConducteur }}
                                        </a>
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="{{ path('app_amende_show', {'id': amende.id}) }}" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="{{ path('app_amende_edit', {'id': amende.id}) }}" class="btn btn-sm btn-outline-secondary">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form method="POST" action="{{ path('app_amende_delete', {'id': amende.id}) }}" style="display: inline;">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ amende.id) }}">
                                                <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette amende ?');">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% else %}
                    <div class="text-center py-5">
                        <i class="bi bi-cash-stack fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Aucune amende enregistrée</h5>
                        <p class="text-muted">Aucune amende n'a été enregistrée pour le moment.</p>
                        <a href="{{ path('app_amende_new') }}" class="btn btn-success">
                            <i class="bi bi-plus-circle me-1"></i>Enregistrer une amende
                        </a>
                    </div>
                    {% endif %}
                </div>
            </div>
        </main>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
