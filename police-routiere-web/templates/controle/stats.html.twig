            {% if stats.name %}
                <div class="col-md-6 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"> Informations Personnelles</h5>
                            <p><strong>Nom:</strong> {{ stats.name }}</p>
                            <p><strong>Email:</strong> {{ stats.email }}</p>
                            {% if stats.brigade %}
                                <p><strong>Brigade:</strong> {{ stats.brigade }}</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endif %}

            <div class="col-md-6 mb-3">
                <div class="card border-primary">
                    <div class="card-body">
                        <h5 class="card-title"> Contr么les</h5>
