                    <div class="card border-info">
                        <div class="card-body">
                            <h5 class="card-title"> Agents</h5>
                            <h2 class="text-info">{{ stats.total_agents }}</h2>
                            <small class="text-muted">Agents dans la brigade</small>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <a href="{{ path('app_controle_index') }}" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Retour aux Contr么les
