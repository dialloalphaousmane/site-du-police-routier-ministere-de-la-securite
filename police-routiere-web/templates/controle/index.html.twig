{% extends 'base.html.twig' %}

{% block title %}Liste des Contrôles - Police Routière{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1>
                    <i class="bi bi-card-checklist"></i> Contrôles Routiers
                </h1>
                {% if is_granted('ROLE_AGENT') %}
                    <a href="{{ path('app_controle_new') }}" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Nouveau Contrôle
                    </a>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Barre de recherche et filtres -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-3">
                            <label for="search" class="form-label">Recherche</label>
                            <input type="text" class="form-control" id="search" name="search" 
                                   placeholder="Véhicule, conducteur, immatriculation..." 
                                   value="{{ app.request.query.get('search') }}">
                        </div>
                        <div class="col-md-2">
                            <label for="date_start" class="form-label">Date début</label>
                            <input type="date" class="form-control" id="date_start" name="date_start" 
                                   value="{{ app.request.query.get('date_start') }}">
                        </div>
                        <div class="col-md-2">
                            <label for="date_end" class="form-label">Date fin</label>
                            <input type="date" class="form-control" id="date_end" name="date_end" 
                                   value="{{ app.request.query.get('date_end') }}">
                        </div>
                        <div class="col-md-2">
                            <label for="brigade" class="form-label">Brigade</label>
                            <select class="form-select" id="brigade" name="brigade">
                                <option value="">Toutes les brigades</option>
                                <option value="1" {{ app.request.query.get('brigade') == '1' ? 'selected' }}>Brigade Centre</option>
                                <option value="2" {{ app.request.query.get('brigade') == '2' ? 'selected' }}>Brigade Nord</option>
                                <option value="3" {{ app.request.query.get('brigade') == '3' ? 'selected' }}>Brigade Sud</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="agent" class="form-label">Agent</label>
                            <select class="form-select" id="agent" name="agent">
                                <option value="">Tous les agents</option>
                                <option value="1" {{ app.request.query.get('agent') == '1' ? 'selected' }}>Agent Mamadou Diallo</option>
                                <option value="2" {{ app.request.query.get('agent') == '2' ? 'selected' }}>Agent Oumar Touré</option>
                                <option value="3" {{ app.request.query.get('agent') == '3' ? 'selected' }}>Agent Sékou Condé</option>
                            </select>
                        </div>
                        <div class="col-md-12">
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-search"></i> Rechercher
                                </button>
                                <a href="{{ path('app_controle_index') }}" class="btn btn-secondary">
                                    <i class="bi bi-arrow-clockwise"></i> Réinitialiser
                                </a>
                                <button type="button" class="btn btn-success" onclick="exportControls()">
                                    <i class="bi bi-download"></i> Exporter
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    {% if controles|length > 0 %}
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Date</th>
                                        <th>Lieu</th>
                                        <th>Véhicule</th>
                                        <th>Immatriculation</th>
                                        <th>Conducteur</th>
                                        <th>Agent</th>
                                        <th>Brigade</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for controle in controles %}
                                        <tr>
                                            <td>{{ controle.dateControle|date('d/m/Y H:i') }}</td>
                                            <td>{{ controle.lieuControle }}</td>
                                            <td>{{ controle.marqueVehicule }}</td>
                                            <td>{{ controle.immatriculation }}</td>
                                            <td>{{ controle.nomConducteur }} {{ controle.prenomConducteur }}</td>
                                            <td>
                                                {% if controle.agent %}
                                                    {{ controle.agent.nom }} {{ controle.agent.prenom }}
                                                    <br><small class="text-muted">{{ controle.agent.matricule }}</small>
                                                {% else %}
                                                    <span class="text-muted">Non assigné</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if controle.brigade %}
                                                    {{ controle.brigade.libelle }}
                                                    <br><small class="text-muted">{{ controle.brigade.code }}</small>
                                                {% else %}
                                                    <span class="text-muted">Non assignée</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="{{ path('app_controle_show', {'id': controle.id}) }}" 
                                                       class="btn btn-sm btn-outline-primary" title="Voir">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_DIRECTION_GENERALE') or 
                                                          (is_granted('ROLE_DIRECTION_REGIONALE') and controle.brigade.region == app.user.region) or
                                                          (is_granted('ROLE_CHEF_BRIGADE') and controle.brigade == app.user.brigade) %}
                                                        <a href="{{ path('app_controle_edit', {'id': controle.id}) }}" 
                                                           class="btn btn-sm btn-outline-warning" title="Modifier">
                                                            <i class="bi bi-pencil"></i>
                                                        </a>
                                                        <a href="{{ path('app_controle_add_infraction', {'id': controle.id}) }}" 
                                                           class="btn btn-sm btn-outline-success" title="Ajouter infraction">
                                                            <i class="bi bi-plus"></i>
                                                        </a>
                                                    {% endif %}
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i>
                    <strong>Aucun contrôle trouvé</strong>
                    {% if is_granted('ROLE_AGENT') %}
                        <a href="{{ path('app_controle_new') }}" class="btn btn-primary btn-sm ms-2">
                            <i class="bi bi-plus-circle"></i> Créer le premier contrôle
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    {% endif %}
</div>

<script>
function exportControls() {
    // Récupérer les paramètres de recherche actuels
    const params = new URLSearchParams(window.location.search);
    
    // Ajouter le paramètre d'export
    params.set('export', '1');
    
    // Rediriger vers l'URL d'export
    window.location.href = '{{ path("app_admin_export_controls") }}?' + params.toString();
}

// Auto-recherche après 2 secondes d'inactivité dans le champ de recherche
let searchTimeout;
document.getElementById('search').addEventListener('input', function() {
    clearTimeout(searchTimeout);
    searchTimeout = setTimeout(function() {
        document.querySelector('form').submit();
    }, 2000);
});

// Validation des dates
document.getElementById('date_start').addEventListener('change', function() {
    const dateEnd = document.getElementById('date_end');
    if (this.value && dateEnd.value && this.value > dateEnd.value) {
        dateEnd.value = this.value;
    }
});

document.getElementById('date_end').addEventListener('change', function() {
    const dateStart = document.getElementById('date_start');
    if (this.value && dateStart.value && this.value < dateStart.value) {
        dateStart.value = this.value;
    }
});
</script>
{% endblock %}
                        Commencez par créer votre premier contrôle routier.
                    {% else %}
                        Aucun contrôle n'a été enregistré pour le moment.
                    {% endif %}
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
