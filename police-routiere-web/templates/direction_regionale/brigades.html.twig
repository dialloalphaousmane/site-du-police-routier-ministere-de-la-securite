{% extends 'base.html.twig' %}

{% block title %}Brigades - {{ region.nom }}{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1><i class="bi bi-shield me-2"></i>Brigades - {{ region.nom }}</h1>
        </div>
    </div>

    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Code</th>
                        <th>Nom</th>
                        <th>Chef</th>
                        <th>Localit√©</th>
                        <th>Contact</th>
                        <th>Statut</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% if brigades|length > 0 %}
                        {% for brigade in brigades %}
                            <tr>
                                <td>
                                    <span class="badge bg-info">{{ brigade.code }}</span>
                                </td>
                                <td><strong>{{ brigade.nom }}</strong></td>
                                <td>{{ brigade.chef }}</td>
                                <td><small>{{ brigade.localite }}</small></td>
                                <td>
                                    <small>
                                        {{ brigade.email }}<br>
                                        {{ brigade.telephone }}
                                    </small>
                                </td>
                                <td>
                                    {% if brigade.active %}
                                        <span class="badge bg-success">Actif</span>
                                    {% else %}
                                        <span class="badge bg-secondary">Inactif</span>
                                    {% endif %}
                                </td>
                                <td class="text-end">
                                    <a href="#" class="btn btn-sm btn-info" title="Voir">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center py-4 text-muted">Aucune brigade</td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3">
        <a href="{{ path('app_dashboard_direction_regionale') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-1"></i>Retour au tableau de bord
        </a>
    </div>
</div>
{% endblock %}
